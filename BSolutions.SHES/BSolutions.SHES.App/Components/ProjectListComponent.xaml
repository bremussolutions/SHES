<UserControl
    x:Class="BSolutions.SHES.App.Components.ProjectListComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:observables="using:BSolutions.SHES.Models.Observables"
    xmlns:components="using:BSolutions.SHES.App.Components"
    xmlns:converters="using:BSolutions.SHES.App.Converters"
    xmlns:controls="using:BSolutions.SHES.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="{x:Bind ViewModel.OnLoaded}">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <SplitButton Command="{x:Bind ViewModel.AddProjectDialogCommand}"
                         CommandParameter="{Binding ElementName=NewProjectDialog}"
                         MinWidth="80"
                         Margin="0 10 10 10">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Margin="0 0 5 0" FontSize="13" />
                    <TextBlock x:Uid="Main_ProjectList_New" />
                </StackPanel>
                <SplitButton.Flyout>
                    <Flyout Placement="Bottom">
                        <StackPanel>
                            <MenuFlyoutItem x:Uid="Main_ProjectList_EtsImport"
                                        Command="{x:Bind ViewModel.ImportKnxProjectDialogCommand}"
                                        CommandParameter="{x:Bind ImportKnxProjectDialog}" />
                            <MenuFlyoutItem x:Uid="Main_ProjectList_OpenHabImport" />
                        </StackPanel>
                    </Flyout>
                </SplitButton.Flyout>
            </SplitButton>
            <Button x:Uid="Main_ProjectList_Open"
                    Command="{x:Bind ViewModel.OpenProjectCommand}"
                    MinWidth="80"
                    Margin="0 10 10 10" />
            <Button x:Uid="Main_ProjectList_Delete"
                    Command="{x:Bind ViewModel.DeleteProjectDialogCommand}"
                    CommandParameter="{Binding ElementName=DeleteProjectDialog}"
                    MinWidth="80"
                    Margin="0 10 0 10" />
        </StackPanel>

        <ListView x:Name="ProjectList"
                  ItemsSource="{x:Bind ViewModel.ProjectList}"
                  SelectedItem="{x:Bind ViewModel.SelectedProject, Mode=TwoWay}"
                  SelectionMode="Single">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="12" Background="{ThemeResource SystemBaseLowColor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="Main_ProjectList_ProjectName" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <TextBlock x:Uid="Main_ProjectList_ProjectNumber"  Grid.Column="1" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <TextBlock x:Uid="Main_ProjectList_ProjectStatus" Grid.Column="2" Style="{ThemeResource CaptionTextBlockStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="observables:ObservableProject">
                    <Grid Height="48" AutomationProperties.Name="{x:Bind Name}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="{x:Bind Name}" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{x:Bind Number}"/>
                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{x:Bind State}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- DIALOG: New Project -->
        <ContentDialog x:Uid="Main_ProjectList_NewProjectDialog"
                       x:Name="NewProjectDialog"
                       PrimaryButtonCommand="{x:Bind ViewModel.AddProjectCommand}"
                       IsPrimaryButtonEnabled="{x:Bind ViewModel.NewProject.HasErrors, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                       DefaultButton="Primary">

            <ScrollViewer Height="350"
                          IsTabStop="True"
                          IsVerticalScrollChainingEnabled="True"
                          VerticalScrollMode="Enabled"
                          VerticalScrollBarVisibility="Visible">
                <StackPanel Margin="0 0 20 0">
                    <TextBlock x:Uid="Main_ProjectList_NewProjectDialog_Project"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBox x:Uid="Main_ProjectList_NewProjectDialog_Name" HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                             Text="{x:Bind ViewModel.NewProject.Name, Mode=TwoWay}"
                             Margin="0 10 0 0" />
                    <TextBox x:Uid="Main_ProjectList_NewProjectDialog_Number" HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                             Text="{x:Bind ViewModel.NewProject.Number, Mode=TwoWay}"
                             Margin="0 10 0 0" />

                    <!-- BAUHERRSCHAFT -->
                    <TextBlock x:Uid="Main_ProjectList_NewProjectDialog_BuildingOwner"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0 20 0 10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Uid="Main_ProjectList_NewProjectDialog_FirstName"
                                 Text="{x:Bind ViewModel.NewProject.ClientFirstName, Mode=TwoWay}"
                                 Width="170" Margin="0 0 10 0" />
                        <TextBox x:Uid="Main_ProjectList_NewProjectDialog_LastName"
                                 Text="{x:Bind ViewModel.NewProject.ClientSurname, Mode=TwoWay}"
                                 Width="170" />
                    </StackPanel>
                    <TextBox x:Uid="Main_ProjectList_NewProjectDialog_Phone"
                             Text="{x:Bind ViewModel.NewProject.ClientPhone, Mode=TwoWay}"
                             Margin="0 10 0 0" />
                    <TextBox x:Uid="Main_ProjectList_NewProjectDialog_Email"
                             Text="{x:Bind ViewModel.NewProject.ClientEmail, Mode=TwoWay}"
                             Margin="0 10 0 0" />

                    <TextBlock x:Uid="Main_ProjectList_NewProjectDialog_ConstructionSite"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0 20 0 10" />
                    <TextBox x:Uid="Main_ProjectList_NewProjectDialog_Street"
                             Text="{x:Bind ViewModel.NewProject.ConstructionStreet, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0 10 0 0">
                        <TextBox x:Uid="Main_ProjectList_NewProjectDialog_PostalCode"
                                 Text="{x:Bind ViewModel.NewProject.ConstructionPostalCode, Mode=TwoWay}"
                                 Width="100" Margin="0 0 10 0" />
                        <TextBox x:Uid="Main_ProjectList_NewProjectDialog_City"
                                 Text="{x:Bind ViewModel.NewProject.ConstructionCity, Mode=TwoWay}"
                                 Width="240" />
                    </StackPanel>

                    <controls:ValidationMessage Errors="{x:Bind ViewModel.NewProject.Errors, Mode=OneWay}" />
                </StackPanel>
            </ScrollViewer>

            
        </ContentDialog>

        <!-- DIALOG: KNX Project Import -->
        <ContentDialog x:Uid="Main_ProjectList_KnxImportDialog"
                       x:Name="ImportKnxProjectDialog"
                       PrimaryButtonCommand="{x:Bind ViewModel.ImportKnxProjectCommand}"
                       DefaultButton="Primary">
            <StackPanel Margin="0 0 20 0">

                <!-- PASSWORD PROTECTION-->
                <StackPanel Visibility="{x:Bind ViewModel.IsImportProjectProtected, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                    <TextBlock TextWrapping="Wrap" x:Uid="Main_ProjectList_KnxImportDialog_PasswordProtection" />
                    <PasswordBox Password="{x:Bind ViewModel.ImportProjectPassword, Mode=TwoWay}"
                                 Margin="0 10 0 0" />
                </StackPanel>

                <!-- IMPORT DATA -->
                <StackPanel Margin="0 20 0 0">
                    <TextBlock x:Uid="Main_ProjectList_KnxImportDialog_ImportFilter" />
                    <CheckBox x:Uid="Main_ProjectList_KnxImportDialog_MasterData"
                              IsChecked="True"
                              IsEnabled="False" Margin="0 10 0 0" />
                    <CheckBox x:Uid="Main_ProjectList_KnxImportDialog_BuildingStructure"
                              IsChecked="{x:Bind ViewModel.ImportProjectStructure, Mode=TwoWay}" />
                    <CheckBox x:Uid="Main_ProjectList_KnxImportDialog_Devices"
                              IsChecked="{x:Bind ViewModel.ImportProjectDevices, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <!-- DIALOG: Delete Project -->
        <ContentDialog x:Uid="Main_ProjectList_DeleteDialog"
                       x:Name="DeleteProjectDialog"
                       PrimaryButtonCommand="{x:Bind ViewModel.DeleteProjectCommand}"
                       DefaultButton="Primary">

            <TextBlock x:Uid="Main_ProjectList_DeleteDialog_Commitment"
                       TextWrapping="Wrap" />
        </ContentDialog>
    </StackPanel>
</UserControl>
