<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BSolutions.SHES.App.Components.ProjectItemTreeComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:BSolutions.SHES.App.Converters"
    xmlns:observables="using:BSolutions.SHES.Models.Observables"
    mc:Ignorable="d" Loaded="{x:Bind ViewModel.OnLoaded}" SizeChanged="UserControl_SizeChanged">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <CommandBar HorizontalAlignment="Left" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
            <AppBarButton x:Uid="BuildingStructure_ProjectItemTree_Commands_Add" Icon="Add"
                          Command="{x:Bind ViewModel.AddProjectItemDialogCommand}"
                          CommandParameter="{Binding ElementName=AddProjectItemDialog}" />
            <AppBarButton x:Uid="BuildingStructure_ProjectItemTree_Commands_Delete"
                          Command="{x:Bind ViewModel.DeleteProjectItemCommand}"
                          Icon="Delete">
            </AppBarButton>
        </CommandBar>

        <ScrollViewer x:Name="ProjectElementTreeScrollViewer"
                      HorizontalScrollMode="Enabled"
                      VerticalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
                <TreeView Name="ProjectElementTree"
                          ItemsSource="{x:Bind ViewModel.ProjectItems, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedProjectItem, Mode=TwoWay}"
                          Margin="0 0 10 10">
                    <TreeView.ItemTemplate>
                        <DataTemplate x:DataType="observables:ObservableProjectItem">
                            <TreeViewItem ItemsSource="{x:Bind Children, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{StaticResource MaterialDesignIcons}" Glyph="{Binding Icon}" Margin="0 0 5 0" />
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                                </StackPanel>
                            </TreeViewItem>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
        </ScrollViewer>

        <!-- DIALOG: New Project Item -->
        <ContentDialog x:Name="AddProjectItemDialog"
                       x:Uid="BuildingStructure_ProjectItemTree_Commands_Add_Dialog"
                       DefaultButton="Primary"
                       PrimaryButtonCommand="{x:Bind ViewModel.AddProjectItemCommand}"
                       IsPrimaryButtonEnabled="{x:Bind ViewModel.HasErrors, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}">
            <StackPanel>
                <ComboBox x:Uid="BuildingStructure_ProjectItemTree_Commands_Add_Dialog_Type"
                          HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                          ItemsSource="{x:Bind ViewModel.RestrictedProjectItemInfos}"
                          SelectedItem="{x:Bind ViewModel.NewProjectItemType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          DisplayMemberPath="DisplayName"
                          Width="300"
                          Margin="0 0 0 10" />

                <TextBox x:Uid="BuildingStructure_ProjectItemTree_Commands_Add_Dialog_Name"
                         HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                         Text="{x:Bind ViewModel.NewProjectItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="300" />
            </StackPanel>
        </ContentDialog>
    </StackPanel>
</UserControl>
